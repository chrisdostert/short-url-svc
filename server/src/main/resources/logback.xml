<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>time=&quot;%d{HH:mm:ss.SSS}&quot;, thread=&quot;[%thread]&quot;, level=&quot;%-5level&quot; logger=&quot;%logger{36}&quot;
                msg=&quot;%msg&quot;%n
            </pattern>
        </encoder>
    </appender>

    <logger name="slick" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>